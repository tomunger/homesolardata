	"version": "0.2.0",
	"configurations": [

		{
			"name": "runlogger.py",
			"type": "python",
			"request": "launch",
			"program": "gather/runlogger.py",
			"console": "integratedTerminal",
			"justMyCode": false, 
			"args": [
				"-L", "log-config.yaml",
				"-E", "localenv.txt"
			]
		},
		{
			"name": "Python: Current File & library",
			"type": "python",
			"request": "launch",
			"program": "${file}",
			"console": "integratedTerminal",
			"justMyCode": false
		},
		{
			"name": "Python: Current File",
			"type": "python",
			"request": "launch",
			"program": "${file}",
			"console": "integratedTerminal",
			"justMyCode": true
		},
		{
			"name": "Python: Current dash-sample",
			"type": "python",
			"request": "launch",
			"program": "${file}",
			"cwd": "${workspaceRoot}/dash-sample",
			"console": "integratedTerminal",
			"justMyCode": true,
		},
		{
			"name": "Python: test-solarrecent",
			"type": "python",
			"request": "launch",
			"program": "test-solarrecent.py",
			"cwd": "${workspaceRoot}/dash-sample",
			"console": "integratedTerminal",
			"justMyCode": true
		},
		{
			"name": "Python: rundashboard",
			"type": "python",
			"request": "launch",
			"program": "dashboard/rundashboard.py",
			"cwd": "${workspaceRoot}",
			"console": "integratedTerminal",
			"justMyCode": true
		},
		{
			"name": "Docker: dashboard(docker)",
			"type": "docker",
			"request": "launch",
			"preLaunchTask": "docker-run: debug",
			"dockerServerReadyAction": {
				"action": "openExternally",
				"uriFormat": "http://localhost:8080"
			},
			"python": {
				"pathMappings": [
					{
						"localRoot": "${workspaceFolder}",
						"remoteRoot": "/app"
					}
				],
				"projectType": "general"
			}
		}
	]
}